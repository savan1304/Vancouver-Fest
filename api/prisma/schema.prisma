generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int     @id @default(autoincrement())
  email   String  @unique
  auth0Id String  @unique @default("")
  name    String? 
}

model Cafe {
  id             Int        @id @default(autoincrement())
  auth0Id        String     @unique @default("")
  BusinessNumber String?    @unique // 9 digits + 2 letters + 4 digits format
  name           String?
  hours          String?
  address        String?
  foodItems      FoodItem[]
  priceRange     Int        @default(0)
  contactNumber  Int // 10 digit 
  contactEmail   String     @unique // must be a business email
  festivals      Festival[]
}

model Admin {
  id      Int     @id @default(autoincrement())
  email   String  @unique
  auth0Id String  @unique @default("")
  name    String?
}

model Festival {
  id                Int        @id @default(autoincrement())
  name              String?
  tagline           String?
  startDate         DateTime
  endDate           DateTime
  Location          String?
  numberOfAttendees Int
  foodItems         FoodItem[]
  cafes             Cafe[]
}

model FoodItem {
  id          Int        @id @default(autoincrement())
  name        String?
  imageUrl    String?
  Summary     String?
  receipeLink String?
  cafe        Cafe[]
  category    String?
  festival    Festival[]
}
